<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PodcastPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PodcastPlayer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PodcastPlayer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PodcastPlayer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInputLayoutStyle">
        <item name="android:textColorHint">@color/login_text_color_selector</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/login_text_color_selector</item>
        <item name="android:fontFamily">@font/aclonica</item>
    </style>

    <style name="LoginThemeBase" parent="Theme.PodcastPlayer">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/banana_yellow</item>
        <item name="colorAccent">@color/banana_yellow</item>
    </style>

    <style name="LoginTheme" parent="LoginThemeBase">

    </style>

    <style name="RegisterTheme" parent="Theme.PodcastPlayer">
        <!-- toolbar and status bar color -->
        <item name="colorPrimary">@color/banana_yellow</item>
        <item name="colorPrimaryDark">@color/dark_yellow</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/banana_yellow</item>
        <item name="colorAccent">@color/banana_yellow</item>

        <!-- toolbar text colors -->
        <item name="titleTextColor">@color/dark_jungle_green</item>
        <item name="actionMenuTextColor">@color/dark_jungle_green</item>
    </style>
</resources>