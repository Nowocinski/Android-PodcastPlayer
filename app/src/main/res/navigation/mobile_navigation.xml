<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_subscribe">

    <fragment
        android:id="@+id/nav_subscribe"
        android:name="com.example.podcastplayer.ui.Subscribe.SubscribeFragment"
        android:label="@string/menu_subscribe"
        tools:layout="@layout/fragment_subscribe" >
        <action
            android:id="@+id/action_nav_subscribe_to_nav_discover"
            app:destination="@id/nav_discover" />
    </fragment>

    <fragment
        android:id="@+id/nav_discover"
        android:name="com.example.podcastplayer.ui.Discover.DiscoverFragment"
        android:label="@string/menu_discover"
        tools:layout="@layout/fragment_discover" />
</navigation>